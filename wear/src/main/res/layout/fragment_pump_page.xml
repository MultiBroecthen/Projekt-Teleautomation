<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pump_page_title"
            android:textAlignment="center"
            android:textSize="@dimen/title"
            android:textColor="@color/accent"
            android:gravity="top"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/text"/>

        <TextView
            android:id="@+id/textPumpingStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pumping_inactive"
            android:textAlignment="center"
            android:textSize="@dimen/text"
            android:textColor="@color/accent"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/text"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:paddingTop="@dimen/button_padding"
            android:paddingBottom="@dimen/button_padding">

            <ImageView
                android:id="@+id/imagePumpingButton"
                android:layout_width="@dimen/inline_action_button"
                android:layout_height="@dimen/inline_action_button"
                android:src="@drawable/ic_action_start"
                android:background="@drawable/circle"/>

            <TextView
                android:layout_width="@dimen/text"
                android:layout_height="@dimen/text"/>

            <TextView
                android:id="@+id/textPumpingButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start"
                android:textSize="@dimen/text"
                android:textColor="@color/accent"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>