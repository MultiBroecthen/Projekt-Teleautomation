<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tank_page_title"
            android:textAlignment="center"
            android:textSize="@dimen/title"
            android:textColor="@color/accent"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/half_tank_interspace"
                android:paddingRight="@dimen/half_tank_interspace">

                <TextView
                    android:id="@+id/tank1"
                    android:layout_width="@dimen/tank_width"
                    android:layout_height="@dimen/tank_height"
                    android:background="@color/darker_ui_element"/>

                <TextView
                    android:id="@+id/level1"
                    android:layout_width="@dimen/tank_width"
                    android:layout_height="50dp"
                    android:background="@color/active_ui_element"
                    android:layout_alignBottom="@id/tank1"/>

                <TextView
                    android:id="@+id/textTank1"
                    android:layout_width="@dimen/tank_width"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/tank1"
                    android:textAlignment="gravity"
                    android:layout_below="@id/tank1"
                    android:textSize="@dimen/text"
                    android:textColor="@color/accent"/>

                <TextView
                    android:id="@+id/lh1"
                    android:layout_width="@dimen/capacitive_sensor_size"
                    android:layout_height="@dimen/capacitive_sensor_size"
                    android:layout_margin="@dimen/capacitive_sensor_margin"
                    android:layout_alignTop="@id/tank1"
                    android:background="@color/dark_grey"/>

                <TextView
                    android:id="@+id/ll1"
                    android:layout_width="@dimen/capacitive_sensor_size"
                    android:layout_height="@dimen/capacitive_sensor_size"
                    android:layout_margin="@dimen/capacitive_sensor_margin"
                    android:layout_alignBottom="@id/tank1"
                    android:background="@color/light_grey"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/half_tank_interspace"
                android:paddingRight="@dimen/half_tank_interspace">

                <TextView
                    android:id="@+id/tank2"
                    android:layout_width="@dimen/tank_width"
                    android:layout_height="@dimen/tank_height"
                    android:background="@color/darker_ui_element"/>

                <TextView
                    android:id="@+id/level2"
                    android:layout_width="@dimen/tank_width"
                    android:layout_height="50dp"
                    android:background="@color/active_ui_element"
                    android:layout_alignBottom="@id/tank2"/>

                <TextView
                    android:id="@+id/textTank2"
                    android:layout_width="@dimen/tank_width"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/tank2"
                    android:textAlignment="gravity"
                    android:layout_below="@id/tank2"
                    android:textSize="@dimen/text"
                    android:textColor="@color/accent"/>

                <TextView
                    android:id="@+id/lh2"
                    android:layout_width="@dimen/capacitive_sensor_size"
                    android:layout_height="@dimen/capacitive_sensor_size"
                    android:layout_margin="@dimen/capacitive_sensor_margin"
                    android:layout_alignTop="@id/tank2"
                    android:background="@color/dark_grey"/>

                <TextView
                    android:id="@+id/ll2"
                    android:layout_width="@dimen/capacitive_sensor_size"
                    android:layout_height="@dimen/capacitive_sensor_size"
                    android:layout_margin="@dimen/capacitive_sensor_margin"
                    android:layout_alignBottom="@id/tank2"
                    android:background="@color/light_grey"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/half_tank_interspace"
                android:paddingRight="@dimen/half_tank_interspace">

                <TextView
                    android:id="@+id/tank3"
                    android:layout_width="@dimen/tank_width"
                    android:layout_height="@dimen/tank_height"
                    android:background="@color/darker_ui_element"/>

                <TextView
                    android:id="@+id/level3"
                    android:layout_width="@dimen/tank_width"
                    android:layout_height="50dp"
                    android:background="@color/active_ui_element"
                    android:layout_alignBottom="@id/tank3"/>

                <TextView
                    android:id="@+id/textTank3"
                    android:layout_width="@dimen/tank_width"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/tank3"
                    android:textAlignment="gravity"
                    android:layout_below="@id/tank3"
                    android:textSize="@dimen/text"
                    android:textColor="@color/accent"/>

                <TextView
                    android:id="@+id/lh3"
                    android:layout_width="@dimen/capacitive_sensor_size"
                    android:layout_height="@dimen/capacitive_sensor_size"
                    android:layout_margin="@dimen/capacitive_sensor_margin"
                    android:layout_alignTop="@id/tank3"
                    android:background="@color/dark_grey"/>

                <TextView
                    android:id="@+id/ll3"
                    android:layout_width="@dimen/capacitive_sensor_size"
                    android:layout_height="@dimen/capacitive_sensor_size"
                    android:layout_margin="@dimen/capacitive_sensor_margin"
                    android:layout_alignBottom="@id/tank3"
                    android:background="@color/light_grey"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>