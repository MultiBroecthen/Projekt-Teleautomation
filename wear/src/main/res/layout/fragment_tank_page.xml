<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tank_level"
            android:textAlignment="center"
            android:textSize="@dimen/title"
            android:textColor="@color/accent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/half_tank_interspace"
                android:paddingRight="@dimen/half_tank_interspace">

                <TextView
                    android:id="@+id/spacer1"
                    android:layout_width="@dimen/tank_width"
                    android:layout_height="@dimen/text" />

                <TextView
                    android:id="@+id/tank1"
                    android:layout_width="@dimen/tank_width"
                    android:layout_height="@dimen/tank_height"
                    android:background="@color/darker_ui_element"
                    android:layout_below="@id/spacer1"/>

                <TextView
                    android:id="@+id/level1"
                    android:layout_width="@dimen/tank_width"
                    android:layout_height="50dp"
                    android:background="@color/active_ui_element"
                    android:layout_alignBottom="@id/tank1"/>

                <TextView
                    android:id="@+id/textTank1"
                    android:layout_width="@dimen/tank_width"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="1"
                    android:textAlignment="gravity"
                    android:layout_below="@id/tank1"
                    android:textSize="@dimen/text"
                    android:textColor="@color/accent"/>

                <ImageView
                    android:layout_width="@dimen/tank_width"
                    android:layout_height="@dimen/tank_width"
                    android:src="@drawable/ic_action_name"
                    android:layout_centerInParent="true"
                    android:visibility="invisible"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/half_tank_interspace"
                android:paddingRight="@dimen/half_tank_interspace">

                <TextView
                    android:id="@+id/spacer2"
                    android:layout_width="@dimen/tank_width"
                    android:layout_height="@dimen/text" />

                <TextView
                    android:id="@+id/tank2"
                    android:layout_width="@dimen/tank_width"
                    android:layout_height="@dimen/tank_height"
                    android:background="@color/darker_ui_element"
                    android:layout_below="@id/spacer2"/>

                <TextView
                    android:id="@+id/level2"
                    android:layout_width="@dimen/tank_width"
                    android:layout_height="50dp"
                    android:background="@color/active_ui_element"
                    android:layout_alignBottom="@id/tank2"/>

                <TextView
                    android:id="@+id/textTank2"
                    android:layout_width="@dimen/tank_width"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="2"
                    android:textAlignment="gravity"
                    android:layout_below="@id/tank2"
                    android:textSize="@dimen/text"
                    android:textColor="@color/accent"/>

                <ImageView
                    android:layout_width="@dimen/tank_width"
                    android:layout_height="@dimen/tank_width"
                    android:src="@drawable/ic_action_name"
                    android:layout_centerInParent="true"
                    android:visibility="invisible"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/half_tank_interspace"
                android:paddingRight="@dimen/half_tank_interspace">

                <TextView
                    android:id="@+id/spacer3"
                    android:layout_width="@dimen/tank_width"
                    android:layout_height="@dimen/text" />

                <TextView
                    android:id="@+id/tank3"
                    android:layout_width="@dimen/tank_width"
                    android:layout_height="@dimen/tank_height"
                    android:background="@color/darker_ui_element"
                    android:layout_below="@id/spacer3"/>

                <TextView
                    android:id="@+id/level3"
                    android:layout_width="@dimen/tank_width"
                    android:layout_height="50dp"
                    android:background="@color/active_ui_element"
                    android:layout_alignBottom="@id/tank3"/>

                <TextView
                    android:id="@+id/textTank3"
                    android:layout_width="@dimen/tank_width"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="3"
                    android:textAlignment="gravity"
                    android:layout_below="@id/tank3"
                    android:textSize="@dimen/text"
                    android:textColor="@color/accent"/>

                <ImageView
                    android:layout_width="@dimen/tank_width"
                    android:layout_height="@dimen/tank_width"
                    android:src="@drawable/ic_action_name"
                    android:layout_centerInParent="true"
                    android:visibility="invisible"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>